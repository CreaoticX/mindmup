                <a href="#" data-mm-role="activatedNodesMeasureSheet"><i class="icon-remove"></i></a>
                </li>
            </ul>
        </div>
    </div>
    <div class="content table-container">
        <table data-mm-role="measurements-table" class="table table-striped hide">
            <thead>
                <tr>
                    <th>Name</th>
                    <th data-mm-role="measurement-template">
                        <div class="btn-group">
                            <a class="btn btn-link black dropdown-toggle" data-toggle="dropdown" href="#"  data-category="Measurements" data-event-type="Add Measure">
								<span class="show-active"><i class="icon-tags"></i>&nbsp;</span>
                                <span data-mm-role="measurement-name"></span>
                                <span class="caret"></span>
                                </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a data-mm-role="remove-measure" data-category="Measurements" data-event-type="Remove Measure">Remove measure</a></li>
                            </ul>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr data-mm-role="idea-template">
                    <th data-mm-role="idea-title" data-mm-truncate="110"></th>
                    <td  tabindex="1" data-mm-role="value-template"></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th>TOTAL</th>
                    <th data-mm-role="summary-template"></th>
                </tr>
            </tfoot>
        </table>
		<div data-mm-role="no-measures" class="pull-middle hide">
			<div>
				<div class="alert alert-info alert-block">
					<h4>Add some measures</h4>
